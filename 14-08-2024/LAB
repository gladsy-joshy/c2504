class StudentMark
{
    public int ID;
    public string name ;

    public int Mark1;
    public int Mark2;

    public void TotalMarks()
    {
        Console.WriteLine(Mark1 + Mark2);

    }

    public void AverageMarks()
    {
        Console.WriteLine((Mark1 + Mark2)/2);

    }
}
internal class Program
{
    static void Main(string[] args)
    {
        StudentMark studentMark1 = new StudentMark();
        studentMark1.ID = 1;
        studentMark1.name = "neha";

        studentMark1.Mark1 = 50;
        studentMark1.Mark2 = 60;
        studentMark1.TotalMarks();
        studentMark1.AverageMarks();




        Console.ReadKey();
    }
}




