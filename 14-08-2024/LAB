using System;
using System.Collections.Generic;
using System.Diagnostics.CodeAnalysis;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Learn
{
    class Calculator
    {
        
        public int num1;
        public int num2;

        public void Add()
        {
            Console.WriteLine($" Output of Division operation is : {num1 + num2}");

        }

        public void Sub()
        {
            Console.WriteLine($" Output of Subtraction operation is : {num1 - num2}");

        }

        public void Mul()
        {
            Console.WriteLine($" Output of Multiplication operation is : {num1 * num2}");

        }

        public void Div()
        {
            Console.WriteLine($" Output of Division operation is : {num1 / num2}");

        }

        public void Modulus()
        {
            Console.WriteLine($" Output of Modulus operation is : {num1 % num2}");

        }
    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Calculator calculator = new Calculator();

            calculator.num1 = 9;
            calculator.num2 = 3;

            calculator.Add();
            calculator.Sub();
            calculator.Mul();
            calculator.Div();
            calculator.Modulus();

            Console.ReadKey();
        }
    }
}
